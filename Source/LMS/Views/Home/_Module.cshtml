@if (User.IsInRole(LMS.Controllers.Role.Teacher))
{
	<p>
		@Ajax.ActionLink("Edit", nameof(LMS.Controllers.HomeController.EditModule), new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "right" }, new { @class = "btn btn-default" })
		@Ajax.ActionLink("Delete", nameof(LMS.Controllers.HomeController.DeleteModule), new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "right" }, new { @class = "btn btn-default" })
	</p>
}
